<html>
<title>
  <!-- NinetyNineCats | <%= @cat.name %> -->
</title>
<body>
  <h2>About <%= @cat.name %></h2>
  <table>
    <tr>
      <th>Name</th>
      <td><%= @cat.name %></td>
    </tr>

    <tr>
      <th>Age</th>
      <td><%= @cat.age %> years old</td>
    </tr>

    <tr>
      <th>Sex</th>
      <td> <%= @cat.sex %> </td>
    </tr>

    <tr>
      <th>Color</th>
      <td> <%= @cat.color %> </td>
    </tr>

    <tr>
      <th>Description</th>
      <td><%= @cat.description %></td>
    </tr>
  </table>
</body>
</html>
